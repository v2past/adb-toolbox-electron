{
  "name": "adb-toolbox-electron",
  "version": "1.0.0",
  "description": "Electron + React + TypeScript ADB 工具箱桌面应用骨架",
  "main": "out/main/index.js",
  "author": "马杰",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build && electron-builder"
  },
  "dependencies": {
    "antd": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.example.adbtoolbox",
    "productName": "ADB Toolbox",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "directories": {
      "output": "dist-final",
      "buildResources": "build"
    },
    "files": [
      "out"
    ],
    "extraMetadata": {
      "version": "1.0.0"
    },
    "extraResources": [
      {
        "from": "vendor/platform-tools",
        "to": "platform-tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/scrcpy",
        "to": "scrcpy",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico",
      "sign": null
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ],
      "icon": "logo.png"
    },
    "publish": []
  }
}
